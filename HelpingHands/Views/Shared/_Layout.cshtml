@inject SignInManager<IdentityUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] HelpingHands</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <div class="container" style="width:100% !important;padding:0px !important;">

            <!-- Static navbar -->
            <nav class="navbar navbar-default navbarHeader">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <img src="~/images/logo.png" height="50" width="50" style="float:left;" />
                        <a class="navbar-brand fontcolor" href="/Home/Index">Helping Hands</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark fontcolor" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            </li>
                            @if (!signInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark fontcolor" asp-area="" asp-controller="Volunteer" asp-action="Create">BECOME A VOLUNTEER</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fontcolor" asp-area="" asp-controller="Contributor" asp-action="Index">MAKE A DONATION</a>
                                </li>
                            }
                            @if (signInManager.IsSignedIn(User))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark fontcolor" asp-area="" asp-controller="Category" asp-action="Index">CATEGORY</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fontcolor" asp-area="" asp-controller="Volunteer" asp-action="Index">VOLUNTEER</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark fontcolor" asp-area="" asp-controller="Donation" asp-action="Index">POST REQUIREMENT</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark  fontcolor" asp-area="" asp-controller="Home" asp-action="About">ABOUNT US</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fontcolor" asp-area="" asp-controller="Home" asp-action="Contact">CONTACT US</a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">

                            @if (signInManager.IsSignedIn(User))
                            {
                                <li class="nav-item" style="display:inline-flex;">
                                    <b class="nav-link text-dark fontcolor" style="padding-top:15px !important;padding:10px 15px;">@User.Identity.Name</b>@Html.ActionLink("LOGOUT", "Logout", "Account", null, new { style = "font-weight:bold;padding-top:15px !important;" })
                                </li>

                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark fontcolor" asp-area="" asp-controller="Account" asp-action="Login" >LOGIN</a>
                                </li>
                                <li class="nav-item">
                    <a class="nav-link text-dark fontcolor" asp-area="" asp-controller="Account" asp-action="Register">REGISTER</a>
                </li>
                            }

                        </ul>
                    </div>
                </div>
            </nav>



        </div>
        
    </header>
    <div class="container" style="width: 100%; padding:0px !important;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fontcolor" style="background-color: #FF4500 !important;">
        <div class="container" style="float:left;margin-top:15px !important;">
            &copy; 2021  Jay Jain  Student Number # 200455303 - Server Side Scripting ASP.net & COMP2084 21F 11249
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
