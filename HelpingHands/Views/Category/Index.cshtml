@model IEnumerable<HelpingHands.Models.MeterialItems>


<h2 class="header">View Category</h2>

<input type="submit" value="Add Category" id="Submit" class="btn btn-default buttonAdd" onclick="location.href='@Url.Action("Create", "Category")'" style="margin-right:10px;" />
@if (ViewBag.toalCount != 0)
{
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <table class="table tbl">
            <thead class="thead-dark thead">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.MererialItemName)
                    </th>
                    <th></th>
                    <th>Action</th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MererialItemName)
                    </td>
                    <td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaterialItemId }, new { style = "font-weight:bold;font-size:16px;color:#337ab7 !important;vertical-align-top;" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaterialItemId }, new { style = "font-weight:bold;font-size:16px;color:#337ab7 !important;vertical-align:top;" })
                    </td>
                    </td>
                </tr>
            }

        </table>
        </div>
        }
        else
        {
        <h4 class="header">No record found</h4>

        }

